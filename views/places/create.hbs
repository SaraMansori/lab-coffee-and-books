<div class="container">
    <h2>Create places</h2>

    <hr>

    <form method="POST" action="/places/create/">
        <div class="form-group" >
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="type">Type</label>
            <select class="form-control" id="type" name="type">
                <option value="coffee shop">coffee shop</option>
                <option value="bookstore">bookstore</option>
            </select>
        </div>


        <label for="localization">Localization</label>
        <div class="form-row">
            <br>
            <div class="col">
                <input id="localization latitude" type="text" class="form-control" placeholder="Latitude" name="lat">
            </div>
            <div class="col">
                <input id="localization longitude" type="text" class="form-control" placeholder="Longitude" name="lng">
            </div>
        </div>

        <br>

        <button type="submit" class="btn btn-dark">Submit</button>

    </form>
</div>