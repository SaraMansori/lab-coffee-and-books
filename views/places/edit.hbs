<div class="container">
    <h2>Edit place: {{place.name}}</h2>

    <hr>

    <form method="POST" action="/places/edit/{{place.id}}">
    
        <div class="form-group" >
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{place.name}}">
        </div>


        <div class="form-group">
            <label for="type">Type</label>
            <select class="form-control" id="type" name="type">

        {{#if isCoffeeShop}}

                <option value="coffee shop">coffee shop</option>
                <option value="bookstore">bookstore</option>
        {{else}}

                <option value="coffee shop">coffee shop</option>
                <option value="bookstore" selected>bookstore</option>

        {{/if}}
            </select>
        </div>


        <label for="localization">Localization</label>
        <div class="form-row">
            <br>
            <div class="col">
                <input id="localization latitude" type="text" class="form-control" placeholder="Latitude" name="lat" value={{location.coordinates.[0]}}>
            </div>
            <div class="col">
                <input id="localization longitude" type="text" class="form-control" placeholder="Longitude" name="lng" value={{location.coordinates.[1]}}>
            </div>
        </div>

        <br>

        <button type="submit" class="btn btn-dark">Submit</button>

    </form>
</div>